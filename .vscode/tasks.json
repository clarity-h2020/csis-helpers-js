{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "start",
            "problemMatcher": [
                "$jshint"
            ]
        },
        {
            "type": "npm",
            "script": "test:current",
            "problemMatcher": [],
        },
        {
            "label": "runCurrentTest",
            "type": "shell",
            "command": "yarn",
            "args": [
                "react-scripts",
                "test",
                "${fileBasenameNoExtension}",
                "--env=jsdom",
                "--watchAll=false"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        }
    ]
}